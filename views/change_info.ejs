<%- include header %>

<div class="row">
    <h2 style="text-align: center"> Welcome! admin</h2>
    <div class="col-sm-5" style="margin-bottom: 40px;">
        <h3 style="text-align: center">修改成员</h3>
        <% if (error) {%>
            <p style="color: red; font-size: 18px;"><%= error%></p>
        <% } %>
        <% if (success) {%>
            <p style="color: green; font-size: 18px;"><%= success%></p>
        <% } %>
        <form class="form-horizontal" method="post" enctype='multipart/form-data'>
            <div class="form-group">
                <label for="inputName" class="col-sm-3 control-label">姓名 <span style="color: red;">*</span></label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="inputName" name="realname" placeholder="姓名" value="<%= student.name%>" required>
                </div>
            </div>
            <div class="form-group">
                <label for="inputYear" class="col-sm-3 control-label">毕业年份 <span style="color: red;">*</span></label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="inputYear" name="year" placeholder="例：2019" value="<%= student.year%>" required>
                </div>
            </div>
            <div class="form-group">
                <label for="inputPosition" class="col-sm-3 control-label">学位 <span style="color: red;">*</span></label>
                <div class="col-sm-9">
                    <select class="form-control" name="position" id="inputPosition">
                        <% if (student.position == 3) { %>
                            <option value="3" selected="selected">本科</option>
                            <option value="2">硕士</option>
                            <option value="1">博士</option>
                        <% } else if (student.position == 2) { %>
                            <option value="3">本科</option>
                            <option value="2" selected="selected">硕士</option>
                            <option value="1">博士</option>
                        <% } else if (student.position == 1) { %>
                            <option value="3">本科</option>
                            <option value="2">硕士</option>
                            <option value="1" selected="selected">博士</option>
                        <% } %>
                    </select>
                    <!--<input type="text" class="form-control" id="inputPosition" name="position" placeholder="本科/硕士/博士" required>-->
                </div>
            </div>
            <div class="form-group">
                <label for="inputAdvisor" class="col-sm-3 control-label">导师 <span style="color: red;">*</span></label>
                <div class="col-sm-9">
                    <select name="advisor" id="inputAdvisor" class="form-control">
                        <% if (student.advisor == "吴帆") { %>
                            <option value="吴帆" selected="selected">吴帆老师</option>
                            <option value="高晓沨">高晓沨老师</option>
                            <option value="孔令和">孔令和老师</option>
                            <option value="傅洛伊">傅洛伊老师</option>
                        <% } else if (student.advisor == "高晓沨") { %>
                                <option value="吴帆">吴帆老师</option>
                                <option value="高晓沨" selected="selected">高晓沨老师</option>
                                <option value="孔令和">孔令和老师</option>
                                <option value="傅洛伊">傅洛伊老师</option>
                        <% } else if (student.advisor == "孔令和") { %>
                                <option value="吴帆">吴帆老师</option>
                                <option value="高晓沨">高晓沨老师</option>
                                <option value="孔令和" selected="selected">孔令和老师</option>
                                <option value="傅洛伊">傅洛伊老师</option>
                        <% } else if (student.advisor == '傅洛伊') { %>
                                <option value="吴帆">吴帆老师</option>
                                <option value="高晓沨">高晓沨老师</option>
                                <option value="孔令和">孔令和老师</option>
                                <option value="傅洛伊" selected="selected">傅洛伊老师</option>
                        <% } %>

                    </select>
                    <!--<input type="text" class="form-control" id="inputAdvisor" name="advisor" placeholder="例：高晓沨" required>-->
                </div>
            </div>
            <div class="form-group">
                <label for="inputNow" class="col-sm-3 control-label">现工作单位</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="inputNow" name="now" placeholder="" value="<%= student.now%>">
                </div>
            </div>
            <div class="form-group">
                <label for="inputJob" class="col-sm-3 control-label">职位</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="inputJob" name="job" placeholder="" value="<%= student.job%>">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPhone" class="col-sm-3 control-label">电话/微信</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="inputPhone" name="phone" placeholder="" value="<%= student.phone%>">
                </div>
            </div>
            <div class="form-group">
                <label for="inputMail" class="col-sm-3 control-label">邮箱</label>
                <div class="col-sm-9">
                    <input type="email" class="form-control" id="inputMail" name="mail" placeholder="" value="<%= student.email%>">
                </div>
            </div>
            <div class="form-group">
                <label for="inputMessage" class="col-sm-3 control-label">留言</label>
                <div class="col-sm-9">
                    <textarea class="form-control" rows="3" name="message" id="inputMessage"><%= student.message%></textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="inputPhoto" class="col-sm-3 control-label">照片</label>
                <div class="col-sm-9">
                    <input type="file" class="form-control" id="inputPhoto" name="photo">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <button type="submit" class="btn btn-default">提交</button>
                </div>
            </div>
        </form>
    </div>
</div>



<%- include footer %>